 
layui.use('table', function(){
  var table = layui.table;
  //监听表格复选框选择
  table.on('checkbox(list)', function(obj){
    console.log(obj)
  });
  //监听工具条
  table.on('tool(list)', function(obj){
    var data = obj.data;
    if(obj.event === 'show'){
    	layer.alert('查看行：<br>'+ JSON.stringify(data))
    } else if(obj.event === 'del'){
      layer.confirm('真的删除行么', function(index){
        layer.close(index);
	      $.post("delete.do", {"ids":data.$pk.columnName}, function(data) {
			layer.alert("成功删除" + JSON.parse(data).count + "条");
			table.reload("listTable");
		  });
      });
    } else if(obj.event === 'edit'){
      layer.open({
				type : 2,
				title : '修改',
				maxmin : true, //最大最小
				shadeClose : false, //点击遮罩关闭层
				resize : true, //是否允许拉伸
				area : [ '600px', '500px' ], //宽高
				content : 'addOrUpdate_page.do?type=update&$pk.columnName='+data.$pk.columnName
		})
    } 
  });
  
  var $ = layui.$, active = {
    getCheckData: function(){ //获取选中数据
      var checkStatus = table.checkStatus('listTable')
      ,data = checkStatus.data;
	   if(data.length<1){
	    	 layer.alert('请选择数据')
	   }else{
		   var ids = [];
		   for(var i=0;i<data.length;i++){
			   ids.push(data[i].$pk.columnName);
		   } 
		   layer.confirm('真的删除选中的条目吗？', function(index) {
				layer.close(index);
				$.post("delete.do", {"ids":ids.join(",")}, function(data) {
					layer.alert("成功删除" + JSON.parse(data).count + "条");
					table.reload("listTable");
				});
			});
	   } 
    } ,
	add : function() {
		layer.open({
			type : 2,
			title : '添加',
			maxmin : true, //最大最小
			shadeClose : false, //点击遮罩关闭层
			resize : true, //是否允许拉伸
			area : [ '600px', '500px' ], //宽高
			content : 'addOrUpdate_page.do?type=add'
		})

	} ,
	search : function() {
		var searchValue=$('#searchValue').val();
		if (searchValue){
			var index = layer.msg('查询中，请稍候...',{icon: 16,time:false,shade:0});
            setTimeout(function(){
                table.reload('listTable', {
                    where: {
                        'searchValue':searchValue
                    }
                });
                layer.close(index);
            },800);
		}
	}
  };
  	window.close = function close(flush){
		layer.closeAll();
		if(flush){
			table.reload("listTable");
		}
	}
  
  $('.layui-btn').on('click', function(){
    var type = $(this).data('type');
    active[type] ? active[type].call(this) : '';
  });
});
 


